<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <link href="https://fonts.googleapis.com/css?family=Open+Sans&display=swap" rel="stylesheet">
    <script
      src="https://code.jquery.com/jquery-3.4.1.min.js"
      integrity="sha256-CSXorXvZcTkaix6Yvo6HppcZGetbYMGWSFlBw8HfCJo="
      crossorigin="anonymous"></script>
    <script src="javascripts/dataMngr.js"></script>
  </head>
  <body id="body">
    <section class="hero">
      <div class="heading">
        <h1 class="title"><%= title %></h1>
        <p class="sub-title">Bienvenido a <%= title %>!</p>
      </div>
    </section>
    <section class="form">
      <form id="reg-form" class="form__reg">
        <label class="form__titulo">Registro de usuario</label>
        <input type="text" id="fname" name="fname" placeholder="<%= fname %>">
        <div id="fname_error" style="display:none;"></div>
        <input type="text" id="lname" name="lname" placeholder="<%= lname %>">
        <div id="lname_error" style="display:none;"></div>
        <input type="text" id="email" name="email" placeholder="<%= email %>">
        <div id="email_error" style="display:none;"></div>
        <input type="password" id="pass" name="pass" placeholder="<%= pass %>">
        <div id="pass_error" style="display:none;"></div>
        <input type="submit" value="Registrar" class="submit">
      </form>
    </section>
    <section class="userlist">
      <div class="user-content">
        <h2 class="user-title">Usuarios registrados:</h2>
        <div class="user-items" id="user-items"></div>
      </div>
    </section>
  </body>
</html>
